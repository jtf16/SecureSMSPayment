<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_transfer_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-01-18"
                android:textAllCaps="true"
                android:autoSizeTextType="uniform"
                android:textColor="@android:color/black"
                android:paddingBottom="16dp"/>

            <TextView
                android:id="@+id/item_transfer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:01:17"
                android:textAllCaps="true"
                android:autoSizeTextType="uniform"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="16dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_iban_from"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PT50 1234 4321 1234 5678 9017 2"
                android:textAllCaps="true"
                android:lines="2"
                android:textColor="@android:color/black"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/item_iban_to"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PT50 0002 0123 1234 5678 9015 4"
                android:textAllCaps="true"
                android:lines="2"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/item_transfer_amount"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="4"
                android:text="900000.00"
                android:paddingBottom="8dp"
                android:autoSizeTextType="uniform"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/item_state"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="4"
                android:text="Not Processed"
                android:paddingBottom="8dp"
                android:autoSizeTextType="uniform"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

